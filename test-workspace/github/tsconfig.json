{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": ["src/**/*", "schema/**/*"],
  "exclude": ["node_modules", "dist"]
}
