{
  // Rust settings
  "rust-analyzer.cargo.features": "all",

  // Extension development
  "files.associations": {
    "*.graphql": "graphql",
    "*.gql": "graphql"
  },

  // GraphQL configuration schema
  "yaml.schemas": {
    "./crates/config/schema/graphqlrc.schema.json": "{.graphqlrc,.graphqlrc.yaml,.graphqlrc.yml,graphql.config.yaml,graphql.config.yml}"
  },
  "json.schemas": [
    {
      "fileMatch": [".graphqlrc.json", ".graphqlrc"],
      "url": "./crates/config/schema/graphqlrc.schema.json"
    }
  ],

  // Exclude build artifacts from search
  "search.exclude": {
    "**/target": true,
    "**/node_modules": true,
    "**/editors/vscode/out": true
  },

  // File watching exclusions for performance
  "files.watcherExclude": {
    "**/target/**": true,
    "**/node_modules/**": true
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "oxc.oxc-vscode",
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "graphql-analyzer.server.path": "target/debug/graphql-lsp"
}
