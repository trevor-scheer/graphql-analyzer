{
  "name": "graphql-lsp",
  "displayName": "GraphQL LSP",
  "description": "GraphQL Language Server with validation, completion, and go-to-definition",
  "version": "0.1.0-alpha.0",
  "repository": "https://github.com/trevor-scheer/graphql-lsp",
  "license": "SEE LICENSE IN LICENSE.md",
  "publisher": "trevor-scheer",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "workspaceContains:**/graphql.config.{yaml,yml,json}",
    "workspaceContains:**/.graphqlrc{.yaml,.yml,.json,}"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "graphql-lsp.restartServer",
        "title": "Restart GraphQL Language Server",
        "category": "GraphQL"
      },
      {
        "command": "graphql-lsp.checkStatus",
        "title": "Check Status",
        "category": "GraphQL"
      }
    ],
    "languages": [
      {
        "id": "graphql",
        "extensions": [
          ".graphql",
          ".gql"
        ],
        "aliases": [
          "GraphQL"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "graphql",
        "scopeName": "source.graphql",
        "path": "./syntaxes/graphql.tmLanguage.json"
      },
      {
        "scopeName": "inline.graphql",
        "path": "./syntaxes/graphql.injection.tmLanguage.json",
        "injectTo": [
          "source.js",
          "source.ts",
          "source.jsx",
          "source.tsx"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.graphql": "graphql"
        }
      }
    ],
    "configurationDefaults": {
      "[graphql]": {
        "editor.semanticHighlighting.enabled": true
      },
      "editor.semanticTokenColorCustomizations": {
        "rules": {
          "*.deprecated": {
            "strikethrough": true
          }
        }
      }
    },
    "configuration": {
      "type": "object",
      "title": "GraphQL LSP",
      "properties": {
        "graphql.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "graphql.server.path": {
          "type": "string",
          "default": "",
          "description": "Path to the graphql-lsp server executable. If empty, the extension will search for it in PATH or download it automatically."
        },
        "graphql.server.logLevel": {
          "type": "string",
          "enum": [
            "error",
            "warn",
            "info",
            "debug",
            "trace"
          ],
          "default": "info",
          "description": "Log level for the LSP server (sets RUST_LOG environment variable)."
        },
        "graphql.server.env": {
          "type": "object",
          "default": {},
          "description": "Environment variables to pass to the LSP server process.",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "keybindings": [
      {
        "command": "graphql-lsp.restartServer",
        "key": "ctrl+alt+g r",
        "mac": "cmd+alt+g r"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "oxlint src",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "package": "vsce package",
    "test:e2e": "npm run compile && npx playwright test",
    "test:e2e:headed": "npm run compile && npx playwright test --headed",
    "test:e2e:debug": "npm run compile && npx playwright test --debug"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.75.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.2.1",
    "oxlint": "^1.30.0",
    "prettier": "^3.7.2",
    "typescript": "^5.0.0"
  }
}
