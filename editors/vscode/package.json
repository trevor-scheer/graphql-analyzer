{
  "name": "graphql-analyzer",
  "displayName": "graphql-analyzer",
  "version": "0.1.5",
  "description": "GraphQL language support for VS Code",
  "categories": [
    "Programming Languages"
  ],
  "license": "SEE LICENSE IN LICENSE.md",
  "repository": "https://github.com/trevor-scheer/graphql-analyzer",
  "publisher": "graphql-analyzer",
  "icon": "icon.png",
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run copy-schema && npm run compile -- --production",
    "copy-schema": "./scripts/copy-schema.sh",
    "compile": "node esbuild.mjs",
    "watch": "node esbuild.mjs --watch",
    "lint": "oxlint src",
    "typecheck": "tsgo --noEmit",
    "package": "vsce package",
    "package:darwin-arm64": "vsce package --target darwin-arm64",
    "package:darwin-x64": "vsce package --target darwin-x64",
    "package:linux-arm64": "vsce package --target linux-arm64",
    "package:linux-x64": "vsce package --target linux-x64",
    "package:win32-x64": "vsce package --target win32-x64",
    "test:e2e": "npm run compile && npx playwright test",
    "test:e2e:headed": "npm run compile && npx playwright test --headed",
    "test:e2e:debug": "npm run compile && npx playwright test --debug"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.75.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.2.1",
    "esbuild": "^0.27.3",
    "oxlint": "^1.30.0",
    "@typescript/native-preview": "^7.0.0-dev"
  },
  "contributes": {
    "commands": [
      {
        "command": "graphql-analyzer.restartServer",
        "title": "Restart Language Server",
        "category": "graphql-analyzer"
      },
      {
        "command": "graphql-analyzer.checkStatus",
        "title": "Check Status",
        "category": "graphql-analyzer"
      },
      {
        "command": "graphql-analyzer.reportIssue",
        "title": "Report Issue",
        "category": "graphql-analyzer"
      }
    ],
    "languages": [
      {
        "id": "graphql",
        "extensions": [
          ".graphql",
          ".gql"
        ],
        "aliases": [
          "GraphQL"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "graphql",
        "scopeName": "source.graphql",
        "path": "./syntaxes/graphql.tmLanguage.json"
      },
      {
        "scopeName": "inline.graphql",
        "path": "./syntaxes/graphql.injection.tmLanguage.json",
        "injectTo": [
          "source.js",
          "source.ts",
          "source.jsx",
          "source.tsx"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.graphql": "graphql"
        }
      }
    ],
    "configurationDefaults": {
      "[graphql]": {
        "editor.semanticHighlighting.enabled": true
      },
      "editor.semanticTokenColorCustomizations": {
        "rules": {
          "*.deprecated": {
            "strikethrough": true
          }
        }
      }
    },
    "configuration": [
      {
        "title": "Server",
        "properties": {
          "graphql-analyzer.server.path": {
            "type": "string",
            "default": "",
            "description": "Custom path to the graphql-lsp executable. Uses the bundled binary when empty."
          },
          "graphql-analyzer.server.env": {
            "type": "object",
            "default": {},
            "description": "Additional environment variables for the language server process.",
            "additionalProperties": {
              "type": "string"
            }
          }
        }
      },
      {
        "title": "Debug",
        "properties": {
          "graphql-analyzer.debug.logLevel": {
            "type": "string",
            "enum": [
              "error",
              "warn",
              "info",
              "debug"
            ],
            "default": "info",
            "description": "Server log verbosity in the 'graphql-analyzer Debug' output channel."
          },
          "graphql-analyzer.debug.healthCheck.enabled": {
            "type": "boolean",
            "default": false,
            "description": "Periodically ping the server to detect unresponsive states."
          },
          "graphql-analyzer.debug.healthCheck.interval": {
            "type": "number",
            "default": 10000,
            "description": "Milliseconds between health check pings."
          },
          "graphql-analyzer.debug.healthCheck.timeout": {
            "type": "number",
            "default": 3000,
            "description": "Milliseconds before a health check ping is considered failed."
          }
        }
      },
      {
        "title": "LSP",
        "properties": {
          "graphql-analyzer.lsp.trace": {
            "type": "boolean",
            "default": true,
            "description": "Log LSP requests and responses to the 'graphql-analyzer LSP' output channel."
          }
        }
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": [
          ".graphqlrc",
          ".graphqlrc.json"
        ],
        "url": "./schema/graphqlrc.schema.json"
      }
    ],
    "yamlValidation": [
      {
        "fileMatch": [
          ".graphqlrc.yaml",
          ".graphqlrc.yml",
          "graphql.config.yaml",
          "graphql.config.yml"
        ],
        "url": "./schema/graphqlrc.schema.json"
      }
    ],
    "keybindings": [
      {
        "command": "graphql-analyzer.restartServer",
        "key": "ctrl+alt+g r",
        "mac": "cmd+alt+g r"
      }
    ]
  },
  "activationEvents": [
    "workspaceContains:**/.graphqlrc{.yaml,.yml,.json,}",
    "workspaceContains:**/graphql.config.{yaml,yml,json}"
  ],
  "engines": {
    "vscode": "^1.75.0"
  }
}