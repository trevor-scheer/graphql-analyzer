{
  "name": "graphql-analyzer",
  "displayName": "graphql-analyzer",
  "version": "0.1.0-alpha.6",
  "description": "GraphQL language support for VS Code",
  "categories": [
    "Programming Languages"
  ],
  "license": "SEE LICENSE IN LICENSE.md",
  "repository": "https://github.com/trevor-scheer/graphql-analyzer",
  "publisher": "trevor-scheer",
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "oxlint src",
    "package": "vsce package",
    "test:e2e": "npm run compile && npx playwright test",
    "test:e2e:headed": "npm run compile && npx playwright test --headed",
    "test:e2e:debug": "npm run compile && npx playwright test --debug"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.75.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.2.1",
    "oxlint": "^1.30.0",
    "typescript": "^5.0.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "graphql-analyzer.restartServer",
        "title": "Restart Language Server",
        "category": "graphql-analyzer"
      },
      {
        "command": "graphql-analyzer.checkStatus",
        "title": "Check Status",
        "category": "graphql-analyzer"
      }
    ],
    "languages": [
      {
        "id": "graphql",
        "extensions": [
          ".graphql",
          ".gql"
        ],
        "aliases": [
          "GraphQL"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "graphql",
        "scopeName": "source.graphql",
        "path": "./syntaxes/graphql.tmLanguage.json"
      },
      {
        "scopeName": "inline.graphql",
        "path": "./syntaxes/graphql.injection.tmLanguage.json",
        "injectTo": [
          "source.js",
          "source.ts",
          "source.jsx",
          "source.tsx"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.graphql": "graphql"
        }
      }
    ],
    "configurationDefaults": {
      "[graphql]": {
        "editor.semanticHighlighting.enabled": true
      },
      "editor.semanticTokenColorCustomizations": {
        "rules": {
          "*.deprecated": {
            "strikethrough": true
          }
        }
      }
    },
    "configuration": [
      {
        "title": "General",
        "properties": {
          "graphql.trace.server": {
            "type": "string",
            "enum": [
              "off",
              "messages",
              "verbose"
            ],
            "default": "off",
            "description": "Traces the communication between VS Code and the language server."
          },
          "graphql.server.path": {
            "type": "string",
            "default": "",
            "description": "Path to the graphql-analyzer server executable. If empty, the extension will search for it in PATH or download it automatically."
          },
          "graphql.server.logLevel": {
            "type": "string",
            "enum": [
              "error",
              "warn",
              "info",
              "debug",
              "trace"
            ],
            "default": "info",
            "description": "Log level for the LSP server (sets RUST_LOG environment variable)."
          },
          "graphql.server.env": {
            "type": "object",
            "default": {},
            "description": "Environment variables to pass to the LSP server process.",
            "additionalProperties": {
              "type": "string"
            }
          }
        }
      },
      {
        "title": "Debug",
        "properties": {
          "graphql.debug.healthCheck.enabled": {
            "type": "boolean",
            "default": false,
            "description": "Enable periodic health checks to detect when the LSP server becomes unresponsive."
          },
          "graphql.debug.healthCheck.interval": {
            "type": "number",
            "default": 10000,
            "description": "Interval between health checks in milliseconds."
          },
          "graphql.debug.healthCheck.timeout": {
            "type": "number",
            "default": 3000,
            "description": "Timeout for health check requests in milliseconds."
          }
        }
      }
    ],
    "keybindings": [
      {
        "command": "graphql-analyzer.restartServer",
        "key": "ctrl+alt+g r",
        "mac": "cmd+alt+g r"
      }
    ]
  },
  "activationEvents": [
    "workspaceContains:**/.graphqlrc{.yaml,.yml,.json,}",
    "workspaceContains:**/graphql.config.{yaml,yml,json}"
  ],
  "engines": {
    "vscode": "^1.75.0"
  }
}